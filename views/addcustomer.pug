doctype html
html
  head
    title Add customer
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      h1 New customer
      form(action='/addcustomer', method='POST')
        div.form-group.form-floating.mb-3
          input(type="text", name="firstname", placeholder="First name", id="floatingFirstname").form-control
          label(for="floatingFirstname") First name
        div.form-group.form-floating.mb-3
          input(type="text", name="lastname", placeholder="Last name", id="floatingLastname").form-control
          label(for="floatingLastname") Last name
        div.form-group.form-floating.mb-3
          input(type="text", name="email", placeholder="Email", id="floatingEmail").form-control 
          label(for="floatingEmail") Email
        div.form-group.form-floating.mb-3
          input(type="number", name="phone", placeholder="Phone", id="floatingPhone").form-control 
          label(for="floatingPhone") Phone
        div.form-group
          input(type="submit", value="Add").btn.btn-primary
